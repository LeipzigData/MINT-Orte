	body(ng-app='app')
		.container
			.header.clearfix
				nav(ng-controller="NaviController")
					ul.nav.nav-pills.pull-right
						li(role='presentation' ng-class="{'active':activeMenu==''}")
							a(href='#')
								i.fa.fa-home.fa-3x
						li(role='presentation' ng-class="{'active':(activeMenu=='search' || activeMenu=='detail' )}")
							a(href='#/search')
								i.fa.fa-search.fa-3x
						li(role='presentation' ng-class="{'active':activeMenu=='info'}")
							a(href='#/info')
								i.fa.fa-info-circle.fa-3x
				h3.text-muted MINT-Wegweiser
		.container(data-ng-view)
			
